<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/SignUp_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_left_arrow"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_V_hline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/SignUp_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="회원가입"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/SignUp_V_hline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/login_hline_kit"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_txt_title" />


        <!--tools:srcCompat="@tools:sample/avatars" />-->

        <TextView
            android:id="@+id/image_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 사진 업로드 "
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView5"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView5"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/LoginImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_V_hline"
            app:srcCompat="@drawable/signup_profile_img" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView5"
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_marginEnd="120dp"
            android:padding="10dp"


            android:src="@drawable/ic_photo"
            app:layout_constraintBottom_toBottomOf="@+id/LoginImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_V_hline"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:text="이메일"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_const_IdBox"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_IdBox" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SignUp_const_IdBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_V_hline">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUp_etxt_ID"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="이메일 형식으로 입력해 주세요"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SignUp_btn_Id_exit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_exit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/SignUp_etxt_ID"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 형식의 아이디를 입력해주세요."
            android:visibility="invisible"
            android:textColor="#FF4C4C"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_IdBox"
            app:layout_constraintTop_toBottomOf="@id/SignUp_const_IdBox" />


        <!--        비밀번호 입력칸-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:text="비밀번호"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_const_PwBox"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_PwBox" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SignUp_const_PwBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_const_IdBox">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUp_etxt_Pw"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="비밀번호"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SignUp_btn_Pw_exit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_exit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/SignUp_etxt_Pw"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영문 대문자와 소문자, 숫자, 특수문자 중 2가지 이상을 조합하여\n6~20자로 입력해주세요."
            android:textColor="#FF4C4C"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_PwBox"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_const_PwBox" />

        <!--        비밀번호확인 입력칸-->

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:text="비밀번호 확인"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_const_PwBox_check"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_PwBox_check" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SignUp_const_PwBox_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_const_PwBox">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUp_etxt_Pw_check"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="비밀번호"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SignUp_btn_Pw_check_exit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_exit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/SignUp_etxt_Pw_check"
                app:layout_constraintTop_toTopOf="parent" />

            <!--10.16일 2시8분-->
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        닉네임 확인-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:text="닉네임"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_const_NickName_Box"
            app:layout_constraintStart_toStartOf="@+id/SignUp_const_NickName_Box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/SignUp_const_NickName_Box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_const_PwBox_check">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/SignUp_etxt_NickName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="12자 이내의 닉네임을 입력해주세요."
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SignUp_btn_NickName_exit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_exit_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/SignUp_etxt_NickName"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        나이-->


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:text="나이"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/SignUp_etxt_Age"
            app:layout_constraintStart_toStartOf="@+id/SignUp_etxt_Age" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/SignUp_etxt_Age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:hint="1~200까지의 숫자만 입력해 주세요."
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_const_NickName_Box" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="성별"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/SignUp_etxt_Age"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_etxt_Age" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SignUp_btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_btn_kit"
            android:text="회원가입"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/SignUp_radio_Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignUp_etxt_Age">

            <RadioButton
                android:id="@+id/SignUp_radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                app:layout_constraintStart_toEndOf="@+id/SignUp_radio_Group"
                app:layout_constraintStart_toStartOf="@+id/SignUp_radiobtn_female" />

            <RadioButton
                android:id="@+id/SignUp_radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="여자"
                app:layout_constraintStart_toEndOf="@+id/SignUp_radiobtn_male"
                app:layout_constraintStart_toStartOf="@+id/SignUp_radio_Group" />


        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>