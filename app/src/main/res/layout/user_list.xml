<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_list_item"
    android:layout_width="match_parent"
    android:layout_height="115dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_user"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_name_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/cv_user"
        app:layout_constraintTop_toTopOf="@id/cv_user">

        <TextView
            android:id="@+id/et_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김종현"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/et_age_bracket1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="("
            android:textSize="16sp" />

        <TextView
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/et_age_bracket2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gender_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_name_age"
        app:layout_constraintTop_toBottomOf="@id/ll_name_age">

        <TextView
            android:id="@+id/et_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#95A4AE"
            android:padding="3dp"
            android:text="남"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/et_mbti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#95A4AE"
            android:padding="3dp"
            android:text="ENFJ"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_heart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@+id/cv_user"
        app:layout_constraintTop_toBottomOf="@+id/ll_gender_mbti">

        <ImageView
            android:id="@+id/iv_heart1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_love" />

        <ImageView
            android:id="@+id/iv_heart2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_love" />

        <ImageView
            android:id="@+id/iv_heart3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_love" />

        <ImageView
            android:id="@+id/iv_heart4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_love" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90C1BDBD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>