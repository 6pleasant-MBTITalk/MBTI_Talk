<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendFind.FriendFindFragment"
    android:id="@+id/Friend_list_frag">

    <!--    <FrameLayout-->
    <!--        android:id="@+id/main_frame"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_margin="1dp"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/main_nav"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mbti_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mbti_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filter_second"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/filter_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/filter_btn1"
            android:src="@drawable/filter_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <androidx.appcompat.widget.AppCompatImageView-->
        <!--            android:id="@+id/filter_btn1"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:src="@drawable/filter_btn1"-->
        <!--            android:layout_marginStart="20dp"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"/>-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_gender"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/filter_group_kit"
            app:layout_constraintBottom_toBottomOf="@id/filter_btn"
            app:layout_constraintStart_toEndOf="@id/filter_btn"
            app:layout_constraintTop_toTopOf="@id/filter_btn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/filter_gender"
            app:layout_constraintEnd_toEndOf="@id/filter_gender"
            app:layout_constraintStart_toStartOf="@id/filter_gender"
            app:layout_constraintTop_toTopOf="@id/filter_gender" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_age"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/filter_group_kit"
            app:layout_constraintBottom_toBottomOf="@id/filter_gender"
            app:layout_constraintStart_toEndOf="@id/filter_gender"
            app:layout_constraintTop_toTopOf="@id/filter_gender" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-30"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/filter_age"
            app:layout_constraintEnd_toEndOf="@id/filter_age"
            app:layout_constraintStart_toStartOf="@id/filter_age"
            app:layout_constraintTop_toTopOf="@id/filter_age" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_first"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/filter_group_kit"
            app:layout_constraintBottom_toBottomOf="@id/filter_age"
            app:layout_constraintStart_toEndOf="@id/filter_age"
            app:layout_constraintTop_toTopOf="@id/filter_age" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/filter_first"
            app:layout_constraintEnd_toEndOf="@id/filter_first"
            app:layout_constraintStart_toStartOf="@id/filter_first"
            app:layout_constraintTop_toTopOf="@id/filter_first" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/filter_second"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/filter_group_kit"
            app:layout_constraintBottom_toBottomOf="@id/filter_first"
            app:layout_constraintStart_toEndOf="@id/filter_first"
            app:layout_constraintTop_toTopOf="@id/filter_first" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/filter_second"
            app:layout_constraintEnd_toEndOf="@id/filter_second"
            app:layout_constraintStart_toStartOf="@id/filter_second"
            app:layout_constraintTop_toTopOf="@id/filter_second" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    </FrameLayout>-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Friend_find_frag_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="친구찾기"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    app:cbn_titleFont="@font/book"-->
</androidx.constraintlayout.widget.ConstraintLayout>